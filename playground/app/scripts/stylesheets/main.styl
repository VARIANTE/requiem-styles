@require '~stylus/requiem'

main
  size(100% 100%)
  transition(all, 1s, ease)
  parallax-block(100)
  background: rgb(20, 90, 20)

  +labels()
    font('Helvetica Neue' 'Helvetica' sans-serif, 1.5em, 100)
    line-height: 1.4em
    color: rgba(255, 255, 255, 0.3)
    text-align: center

  +links()
    color: purple

  img
    auto-fit()
    object-fit: cover

  video
    cover-video()

  +box-id('flex-block')
    flex-block($alignH:'left', $alignV:'center', $direction:row, $uniform:true)
    color: white
    background: black

    & > div
      flex-block($alignH:'center', $alignV:'center', $direction:column)
      size(auto 100%)
      padding: 20px
      text-align: center

      for $i in (1..3)
        &:nth-child({$i})
          background: rgba(100, 100, 100, ($i * 0.1))

  +box-id('fluid-block')
    fluid-block()
    color: white
    background: rgb(10, 10, 10)

    & > div
      size(80%)
      fluid-block($inline:true)
      padding: 20px
      background: rgb(20, 20, 20)

  +box-id('parallax-block')
    pointer-events: none

    & > div
      flex-block()
      width: 100%
      height: 33.333333%

      for $i in (1..3)
        &:nth-child({$i})
          parallax-element(($i - 1) * 10)
          background: rgba(100, 100, 100, ($i * 0.1))

  +box-id('flex-grid')
    flex-grid(100% auto, row, 300px, 4, 1px false)

    & > div.generic
      flex-block()
      padding: 20px
      background: rgb(10, 10, 10)

      +labels()
        width: 100%

      +labels('header')
        font(null, 8em, 100)
      +labels('body')
        font(null, 2.0em, 100)

    & > *
      transition(all, 0.4s, ease-out)

      +state('hover')
        opacity: 0.4
