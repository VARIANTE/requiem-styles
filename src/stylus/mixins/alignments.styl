  right: auto
  bottom: auto
  left: auto
  margin: 0
  position: absolute

  if $alignH != null and length($alignH) > 0
    $align = $alignH[0]

    if $align == 'left'
      left: 0px
    else if $align == 'center' or $align == 'middle'
      margin-left: auto
      margin-right: auto
      left: 0px
      right: 0px
    else if $align == 'right'
      right: 0px

    if length($alignH) > 1
      left: $alignH[1]

    if length($alignH) > 2
      right: $alignH[2]

  if $alignV != null and length($alignV) > 0
    $align = $alignV[0]

    if $align == 'top'
      top: 0px
    else if $align == 'center' or $align == 'middle'
      margin-top: auto
      margin-bottom: auto
      top: 0px
      bottom: 0px
    else if $align == 'bottom'
      bottom: 0px

